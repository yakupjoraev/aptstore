:root {
	--padding-base: 12px;
	--padding-mobile: 20px;
	--padding-desktop: 27px;

	--half-black: rgba(0, 0, 0, 0.5);
	--primary: #ee715f;
	--secondary: #8bbd3f;
	--black: #172500;
	--white: #fff;
	--light-gray: #c4c4c4;
	--gray: #707070;
}

@custom-media --mobile-medium (width >= 480px);
@custom-media --tablet (width >= 768px);
@custom-media --desktop-small (width >= 1024px);
@custom-media --desktop-medium (width >= 1200px);
