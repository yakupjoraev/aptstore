.account-location {
	margin-top: 16px;
	text-align: center;

	@media (--tablet) {
		display: none;
	}
}

.account-location__button {
	border: 0;
	margin-left: -32px;
	padding: 0 0 0 32px;
	height: 30px;
	font-weight: 700;
	font-size: 16px;
	line-height: 19px;
	background: resolve('./account-location.svg') no-repeat;
}

.account-location__label {
	border-bottom: 1px dashed #172500;
}
