@import url('../../../layouts/variables.pcss');

.change-payment-method-modal {
	border-radius: 8px;
	padding: 12px;
	background: var(--white);

	@media (--tablet) {
		padding: 24px 24px 40px;
	}
}

.change-payment-method-modal__title {
	font-weight: 700;
	font-size: 20px;
	line-height: 24px;
	color: var(--black);

	@media (--tablet) {
		font-size: 30px;
		line-height: 35px;
	}
}

.change-payment-method-modal__methods {
	margin-top: 20px;
}
