@import url('../../layouts/variables.pcss');

.scrollable-area {
	overflow: auto;
	padding-right: 20px;
	height: 100%;
	scrollbar-color: var(--secondary) #e5e5e5;
	scrollbar-width: thin;


	&::-webkit-scrollbar {
		width: 4px;
	}

	&::-webkit-scrollbar-track {
		background-color: transparent;
	}

	&::-webkit-scrollbar-thumb {
		border-radius: 100px;
		box-shadow: inset 0 0 6px var(--primary);
	}
}
